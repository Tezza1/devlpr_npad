<!-- views/partials/function_bar.ejs -->
<div class="pure-g function-bar">
    <div class="pure-u-1-3">
        <form class="pure-form search-form">
            <fieldset>
                <legend>Search for projects</legend>
                <input type="text" placeholder="Search projects">
                <button type="submit" class="pure-button pure-button-primary"><i class="fas fa-search"></i></button>
            </fieldset>
        </form>
    </div>
    <div class="pure-u-1-3">
        
    </div>
    <div class="pure-u-1-3">
        <a href="/users/logout">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
        </a>
        <a href="/users/edit">
            <i class="fas fa-user-circle"></i>
            <span>User</span>
        </a>
        <a href="<%= functionBarRoute %>">
            <i class="fas fa-plus-circle"></i>
            <span><%= functionBarLabel %></span>
        </a>

    </div>
</div>